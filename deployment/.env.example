# MeshBOT Environment Configuration
# Copy this file to .env and customize

# Timezone (for scheduled messages)
TIMEZONE=America/Los_Angeles

# Web GUI port
WEBGUI_PORT=8421

# Mesh Node Connection (choose one)
# TCP connection to remote node
MESH_HOSTNAME=192.168.1.251:4403
# Serial connection (uncomment devices in docker-compose.yml)
# MESH_PORT=/dev/ttyUSB0

# Location for weather/location features
LATITUDE=48.50
LONGITUDE=-123.0

# Optional: OpenAI-compatible LLM
# OLLAMA_HOST=http://localhost:11434
# OLLAMA_MODEL=gemma3:270m
